<table class="table">
  <h2>Projects</h2>
  <th>Name</th>
  <th>Allowed Time</th>
  <th>Time Entered</th>
  <th></th>
  <tbody>
    <% @projects.each do |project| %>
    <%= content_tag_for :tr, project do %>
    <% if project.max_minutes < project.sum_of_time_entered %>
    <tr class="text-danger">
      <% else %>
      <tr>
        <% end %>
        <td>
          <%= project.name %>
        </td>
        <td>
          <%= hours_and_minutes(project.max_minutes) %>
        </td>
        <td>
          <%= hours_and_minutes(project.sum_of_time_entered) %>
        </td>
        <td>
          <%= link_to "Edit", edit_project_path(project.id) %>  |
          <%= link_to "Delete", project_path(project.id), method: :delete %>
        </td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
