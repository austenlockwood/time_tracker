<h2>
  Edit a project
</h2>

<%= form_for @project, url: project_path(id: @project.id), method: :patch do |f| %>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :max_minutes %>
  <%= f.number_field :max_minutes, step: 15, min: 120 %>
</p>
<p>
  <%= f.submit "Save" %>
  <%= f.submit "Cancel" %>
</p>
<% end %>

<% if @project.errors.any? %>
<ul>
  <% for message_error in @project.errors.full_messages %>
  <li>
    <%= message_error %>
  </li>
  <% end %>
</ul>
<% end %>
